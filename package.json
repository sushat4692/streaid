{
    "name": "twitch-support-tool",
    "version": "0.0.3",
    "main": "./dist/main.js",
    "description": "Streaming support tool for Twitch",
    "author": {
        "name": "SUSH",
        "email": "sush@sus-happy.net",
        "url": "https://sus-happy.net/"
    },
    "scripts": {
        "dev": "vite",
        "build": "npm run build:vite && npm run build:electron",
        "build:vite": "vite build",
        "build:electron": "rollup -c",
        "pack": "electron-builder",
        "pack:mac": "electron-builder --mac --x64",
        "pack:win": "electron-builder --win --x64",
        "electron": "electron ./dist/main.js",
        "lint": "eslint --ext .ts,tsx electron/** renderer/**",
        "lint:fix": "eslint --fix --ext .ts,tsx electron/** renderer/**",
        "make:license": "ts-node ./cmd/license.ts"
    },
    "dependencies": {
        "@popperjs/core": "^2.8.6",
        "@types/recoil": "^0.0.1",
        "bootstrap": "^5.0.0-beta1",
        "bootstrap-icons": "^1.4.0",
        "dotenv": "^8.2.0",
        "electron-is-dev": "^1.2.0",
        "electron-store": "^7.0.2",
        "fs-extra": "^9.1.0",
        "license-report": "^4.5.0",
        "moment": "^2.29.1",
        "nedb-promises": "^4.1.1",
        "node-fetch": "^2.6.1",
        "react": "^17.0.1",
        "react-dom": "^17.0.1",
        "react-helmet": "^6.1.0",
        "react-intl": "^5.13.1",
        "react-router-dom": "^5.2.0",
        "react-select": "^4.1.0",
        "react-textarea-autosize": "^8.3.2",
        "recoil": "^0.1.2",
        "tmi.js": "^1.7.2",
        "twitch": "^4.4.12",
        "twitch-auth": "^4.4.12",
        "twitch-electron-auth-provider": "^4.4.12"
    },
    "devDependencies": {
        "@babel/core": "^7.13.8",
        "@babel/preset-env": "^7.13.8",
        "@rollup/plugin-replace": "^2.4.1",
        "@types/bootstrap": "^5.0.8",
        "@types/fs-extra": "^9.0.7",
        "@types/moment": "^2.13.0",
        "@types/node": "^14.14.31",
        "@types/node-fetch": "^2.5.8",
        "@types/react": "^17.0.2",
        "@types/react-dom": "^17.0.1",
        "@types/react-helmet": "^6.1.0",
        "@types/react-router-dom": "^5.1.7",
        "@types/react-select": "^4.0.13",
        "@types/tmi.js": "^1.7.1",
        "@typescript-eslint/eslint-plugin": "^4.15.2",
        "@typescript-eslint/parser": "^4.15.2",
        "@typescript-eslint/typescript-estree": "^4.15.2",
        "@vitejs/plugin-react-refresh": "^1.3.1",
        "electron": "^11.3.0",
        "electron-builder": "^22.9.1",
        "eslint": "^7.20.0",
        "eslint-config-prettier": "^8.1.0",
        "eslint-plugin-prettier": "^3.3.1",
        "eslint-plugin-react": "^7.22.0",
        "prettier": "^2.2.1",
        "rollup": "^2.40.0",
        "rollup-plugin-esbuild": "^2.6.1",
        "rollup-plugin-replace": "^2.2.0",
        "sass": "^1.32.8",
        "ts-node": "^9.1.1",
        "tsconfig-paths": "^3.9.0",
        "typescript": "^4.2.2",
        "vite": "^2.0.4"
    },
    "build": {
        "productName": "twitch-support-tool",
        "appId": "net.sus-happy.twitch-support-tool",
        "directories": {
            "output": "build"
        },
        "files": [
            "dist/**/*"
        ],
        "dmg": {
            "contents": [
                {
                    "x": 410,
                    "y": 150,
                    "type": "link",
                    "path": "/Applications"
                },
                {
                    "x": 130,
                    "y": 150,
                    "type": "file"
                }
            ]
        },
        "mac": {
            "icon": "build/icons/icon.icns",
            "target": "dmg"
        },
        "win": {
            "icon": "build/icons/icon.ico",
            "target": "portable"
        },
        "linux": {
            "icon": "build/icons"
        }
    }
}
