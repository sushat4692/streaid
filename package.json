{
    "name": "twitch-support-tool",
    "version": "0.0.6",
    "main": "./dist/main.js",
    "description": "Streaming support tool for Twitch",
    "author": {
        "name": "SUSH",
        "email": "sush@sus-happy.net",
        "url": "https://sus-happy.net/"
    },
    "scripts": {
        "renderer": "vite",
        "dev": "npm run dev:vite && npm run dev:electron",
        "dev:vite": "vite build",
        "dev:electron": "rollup -c --environment BUILD:development",
        "build": "npm run build:vite && npm run build:electron",
        "build:vite": "vite build",
        "build:electron": "rollup -c --environment BUILD:production",
        "pack": "npm run build && npm run pack:mac && npm run pack:win",
        "pack:mac": "electron-builder --mac --x64",
        "pack:win": "electron-builder --win --x64",
        "electron": "electron ./dist/main.js",
        "lint": "eslint --ext .ts,tsx alert/** electron/** renderer/**",
        "lint:fix": "eslint --fix --ext .ts,tsx alert/** electron/** renderer/**",
        "make:license": "ts-node ./cmd/license.ts"
    },
    "dependencies": {
        "@popperjs/core": "^2.9.2",
        "@types/recoil": "^0.0.1",
        "bootstrap-icons": "^1.4.1",
        "classnames": "^2.3.1",
        "dotenv": "^9.0.1",
        "electron-is-dev": "^2.0.0",
        "electron-store": "^8.0.0",
        "fs-extra": "^10.0.0",
        "license-report": "^4.5.0",
        "moment": "^2.29.1",
        "nedb-promises": "^4.1.3",
        "node-fetch": "^2.6.1",
        "react": "^17.0.2",
        "react-copy-to-clipboard": "^5.0.3",
        "react-dom": "^17.0.2",
        "react-helmet": "^6.1.0",
        "react-input-range": "^1.3.0",
        "react-intl": "^5.17.4",
        "react-modal": "^3.13.1",
        "react-router-dom": "^5.2.0",
        "react-select": "^4.3.0",
        "react-textarea-autosize": "^8.3.2",
        "react-tooltip": "^4.2.19",
        "react-twitch-embed": "^2.1.0",
        "recoil": "^0.2.0",
        "shell-quote": "^1.7.2",
        "socket.io": "^4.0.2",
        "socket.io-client": "^4.0.2",
        "sqlite": "^4.0.22",
        "sqlite3": "^5.0.2",
        "tmi.js": "^1.8.3",
        "twitch": "^4.5.5",
        "twitch-auth": "^4.5.5",
        "twitch-electron-auth-provider": "^4.5.5"
    },
    "devDependencies": {
        "@babel/core": "^7.14.0",
        "@babel/preset-env": "^7.14.1",
        "@rollup/plugin-replace": "^2.4.2",
        "@types/fs-extra": "^9.0.11",
        "@types/moment": "^2.13.0",
        "@types/node": "^15.0.2",
        "@types/node-fetch": "^2.5.10",
        "@types/react": "^17.0.5",
        "@types/react-dom": "^17.0.3",
        "@types/react-helmet": "^6.1.1",
        "@types/react-router-dom": "^5.1.7",
        "@types/react-select": "^4.0.15",
        "@types/shell-quote": "^1.7.0",
        "@types/tmi.js": "^1.7.1",
        "@typescript-eslint/eslint-plugin": "^4.22.1",
        "@typescript-eslint/parser": "^4.22.1",
        "@typescript-eslint/typescript-estree": "^4.22.1",
        "@vitejs/plugin-react-refresh": "^1.3.3",
        "autoprefixer": "^10.2.5",
        "electron": "^12.0.7",
        "electron-builder": "^22.11.1",
        "eslint": "^7.26.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^3.4.0",
        "eslint-plugin-react": "^7.23.2",
        "postcss": "^8.2.14",
        "prettier": "^2.2.1",
        "rollup": "^2.47.0",
        "rollup-plugin-esbuild": "^4.2.3",
        "rollup-plugin-replace": "^2.2.0",
        "sass": "^1.32.12",
        "stylelint-config-standard": "^22.0.0",
        "tailwindcss": "^2.1.2",
        "ts-node": "^9.1.1",
        "tsconfig-paths": "^3.9.0",
        "typescript": "^4.2.4",
        "vite": "^2.2.4"
    },
    "build": {
        "productName": "twitch-support-tool",
        "appId": "net.sus-happy.twitch-support-tool",
        "directories": {
            "output": "build"
        },
        "files": [
            "dist/**/*"
        ],
        "dmg": {
            "contents": [
                {
                    "x": 410,
                    "y": 150,
                    "type": "link",
                    "path": "/Applications"
                },
                {
                    "x": 130,
                    "y": 150,
                    "type": "file"
                }
            ]
        },
        "mac": {
            "icon": "build/icons/icon.icns",
            "target": "dmg"
        },
        "win": {
            "icon": "build/icons/icon.ico",
            "target": "portable"
        },
        "linux": {
            "icon": "build/icons"
        }
    },
    "volta": {
        "node": "14.16.0",
        "npm": "7.6.1"
    }
}
