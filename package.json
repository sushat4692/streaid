{
    "name": "twitch-support-tool",
    "version": "0.3.2",
    "main": "./dist/main.js",
    "description": "Streaming support tool for Twitch",
    "author": {
        "name": "SUSH",
        "email": "sush@sus-happy.net",
        "url": "https://sus-happy.net/"
    },
    "scripts": {
        "renderer": "vite",
        "dev": "npm run dev:vite && npm run dev:electron",
        "dev:vite": "vite build",
        "dev:electron": "rollup -c --environment BUILD:development",
        "build": "npm run build:vite && npm run build:electron",
        "build:vite": "vite build",
        "build:electron": "rollup -c --environment BUILD:production",
        "pack": "npm run build && npm run pack:mac && npm run pack:win",
        "pack:mac": "electron-builder --mac --x64",
        "pack:win": "electron-builder --win --x64",
        "electron": "electron ./dist/main.js",
        "lint": "eslint --ext .ts,tsx alert/** electron/** renderer/** version/**",
        "lint:fix": "eslint --fix --ext .ts,tsx alert/** electron/** renderer/** version/**",
        "make:license": "ts-node ./cmd/license.ts",
        "make:jp-dict": "japanese-db sqlite -s ./sourceFolder -d ./dict",
        "postinstall": "patch-package"
    },
    "dependencies": {
        "@emotion/react": "^11.8.2",
        "@emotion/styled": "^11.8.1",
        "@mapbox/node-pre-gyp": "^1.0.9",
        "@popperjs/core": "^2.11.4",
        "@twurple/api": "^5.0.18",
        "@twurple/auth": "^5.0.18",
        "@twurple/auth-electron": "^5.0.18",
        "axios": "^0.26.1",
        "bootstrap-icons": "^1.8.1",
        "classnames": "^2.3.1",
        "compare-versions": "^4.1.3",
        "dotenv": "^16.0.0",
        "electron-is-dev": "^2.0.0",
        "electron-store": "^8.0.1",
        "fs-extra": "^10.0.1",
        "japanese-db": "^0.19.3",
        "moment": "^2.29.1",
        "nedb-promises": "^6.0.3",
        "react": "^17.0.2",
        "react-copy-to-clipboard": "^5.0.4",
        "react-dom": "^17.0.2",
        "react-helmet": "^6.1.0",
        "react-intl": "^5.24.7",
        "react-modal": "^3.14.4",
        "react-range": "^1.8.12",
        "react-router-dom": "^6.2.2",
        "react-select": "^5.2.2",
        "react-textarea-autosize": "^8.3.3",
        "react-tooltip": "^4.2.21",
        "recoil": "^0.6.1",
        "shell-quote": "^1.7.3",
        "socket.io": "^4.4.1",
        "socket.io-client": "^4.4.1",
        "sqlite": "^4.0.25",
        "sqlite3": "^5.0.2",
        "tmi.js": "^1.8.5"
    },
    "devDependencies": {
        "@babel/core": "^7.17.8",
        "@babel/preset-env": "^7.16.11",
        "@emotion/babel-plugin": "^11.7.2",
        "@emotion/css": "^11.7.1",
        "@rollup/plugin-replace": "^4.0.0",
        "@twstyled/babel-preset": "^3.2.4",
        "@twstyled/core": "^3.2.4",
        "@types/fs-extra": "^9.0.13",
        "@types/node": "^17.0.21",
        "@types/react": "^17.0.41",
        "@types/react-dom": "^17.0.14",
        "@types/react-helmet": "^6.1.5",
        "@types/react-router-dom": "^5.3.3",
        "@types/recoil": "^0.0.1",
        "@types/shell-quote": "^1.7.1",
        "@types/tmi.js": "^1.8.1",
        "@typescript-eslint/eslint-plugin": "^5.15.0",
        "@typescript-eslint/parser": "^5.15.0",
        "@typescript-eslint/typescript-estree": "^5.15.0",
        "@vitejs/plugin-react": "^1.2.0",
        "autoprefixer": "^10.4.4",
        "electron": "^17.1.2",
        "electron-builder": "^22.14.13",
        "eslint": "^8.11.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-react": "^7.29.4",
        "license-checker": "^25.0.1",
        "patch-package": "^6.4.7",
        "postcss": "^8.4.12",
        "prettier": "^2.6.0",
        "rollup": "^2.70.1",
        "rollup-plugin-esbuild": "^4.8.2",
        "sass": "^1.49.9",
        "stylelint-config-standard": "^25.0.0",
        "tailwindcss": "^3.0.23",
        "ts-node": "^10.7.0",
        "tsconfig-paths": "^3.14.0",
        "twin.macro": "^2.8.2",
        "typescript": "^4.6.2",
        "vite": "^2.8.6",
        "vite-plugin-babel": "^1.0.0",
        "vite-plugin-babel-macros": "^1.0.6"
    },
    "build": {
        "productName": "twitch-support-tool",
        "appId": "net.sus-happy.twitch-support-tool",
        "directories": {
            "output": "build"
        },
        "files": [
            "dist/**/*"
        ],
        "extraResources": [
            "dict"
        ],
        "dmg": {
            "contents": [
                {
                    "x": 410,
                    "y": 150,
                    "type": "link",
                    "path": "/Applications"
                },
                {
                    "x": 130,
                    "y": 150,
                    "type": "file"
                }
            ]
        },
        "mac": {
            "icon": "build/icons/icon.icns",
            "target": "dmg"
        },
        "win": {
            "icon": "build/icons/icon.ico",
            "target": "portable"
        },
        "linux": {
            "icon": "build/icons"
        }
    },
    "volta": {
        "node": "16.14.0",
        "npm": "8.3.1"
    }
}
