{
    "name": "twitch-support-tool",
    "version": "0.0.1",
    "main": "./dist/main.js",
    "description": "Streaming support tool for Twitch",
    "author": {
        "name": "SUSH",
        "email": "sush@sus-happy.net",
        "url": "https://sus-happy.net/"
    },
    "scripts": {
        "dev": "vite",
        "build": "npm run build:vite && npm run build:electron",
        "build:vite": "vite build",
        "build:electron": "rollup -c",
        "pack": "electron-builder",
        "pack:mac": "electron-builder --mac --x64",
        "pack:win": "electron-builder --win --x64",
        "electron": "electron ./dist/main.js"
    },
    "dependencies": {
        "@fortawesome/fontawesome-svg-core": "^1.2.34",
        "@fortawesome/free-brands-svg-icons": "^5.15.2",
        "@fortawesome/free-regular-svg-icons": "^5.15.2",
        "@fortawesome/free-solid-svg-icons": "^5.15.2",
        "@fortawesome/vue-fontawesome": "^3.0.0-2",
        "@popperjs/core": "^2.7.0",
        "bootstrap": "^5.0.0-beta1",
        "bootstrap-icons": "^1.3.0",
        "dotenv": "^8.2.0",
        "electron-is-dev": "^1.2.0",
        "electron-store": "^7.0.2",
        "fs-extra": "^9.1.0",
        "jsdom": "^16.4.0",
        "moment": "^2.29.1",
        "nedb-promises": "^4.1.1",
        "node-fetch": "^2.6.1",
        "react": "^17.0.1",
        "react-dom": "^17.0.1",
        "react-router-dom": "^5.2.0",
        "react-select": "^4.1.0",
        "redux": "^4.0.5",
        "tmi.js": "^1.7.1",
        "tslib": "^2.1.0",
        "twitch": "^4.4.11",
        "twitch-auth": "^4.4.11",
        "twitch-electron-auth-provider": "^4.4.11"
    },
    "devDependencies": {
        "@babel/core": "^7.12.16",
        "@babel/preset-env": "^7.12.16",
        "@rollup/plugin-replace": "^2.3.4",
        "@types/fs-extra": "^9.0.7",
        "@types/jsdom": "^16.2.6",
        "@types/moment": "^2.13.0",
        "@types/nanoid": "^2.1.0",
        "@types/node": "^14.14.28",
        "@types/node-fetch": "^2.5.8",
        "@types/react": "^17.0.2",
        "@types/react-dom": "^17.0.1",
        "@types/react-router-dom": "^5.1.7",
        "@types/react-select": "^4.0.13",
        "@types/tmi.js": "^1.7.1",
        "@typescript-eslint/eslint-plugin": "^4.15.1",
        "@typescript-eslint/parser": "^4.15.1",
        "@typescript-eslint/typescript-estree": "^4.15.1",
        "@vitejs/plugin-react-refresh": "^1.3.1",
        "@vue/compiler-sfc": "^3.0.5",
        "@vue/eslint-config-prettier": "^6.0.0",
        "@vue/eslint-config-typescript": "^7.0.0",
        "electron": "^11.2.3",
        "electron-builder": "^22.9.1",
        "electron-reload": "^1.5.0",
        "eslint": "^7.20.0",
        "eslint-config-prettier": "^7.2.0",
        "eslint-plugin-prettier": "^3.3.1",
        "eslint-plugin-vue": "^7.6.0",
        "prettier": "^2.2.1",
        "rollup": "^2.39.0",
        "rollup-plugin-esbuild": "^2.6.1",
        "rollup-plugin-replace": "^2.2.0",
        "sass": "^1.32.7",
        "ts-node": "^9.1.1",
        "tsconfig-paths": "^3.9.0",
        "typescript": "^4.1.5",
        "vite": "^2.0.0"
    },
    "build": {
        "productName": "twitch-support-tool",
        "appId": "net.sus-happy.twitch-support-tool",
        "directories": {
            "output": "build"
        },
        "files": [
            "dist/**/*"
        ],
        "dmg": {
            "contents": [
                {
                    "x": 410,
                    "y": 150,
                    "type": "link",
                    "path": "/Applications"
                },
                {
                    "x": 130,
                    "y": 150,
                    "type": "file"
                }
            ]
        },
        "mac": {
            "icon": "build/icons/icon.icns",
            "target": "zip"
        },
        "win": {
            "icon": "build/icons/icon.ico",
            "target": "portable"
        },
        "linux": {
            "icon": "build/icons"
        }
    }
}
