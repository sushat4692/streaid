{
    "name": "twitch-support-tool",
    "version": "0.3.0",
    "main": "./dist/main.js",
    "description": "Streaming support tool for Twitch",
    "author": {
        "name": "SUSH",
        "email": "sush@sus-happy.net",
        "url": "https://sus-happy.net/"
    },
    "scripts": {
        "renderer": "vite",
        "dev": "npm run dev:vite && npm run dev:electron",
        "dev:vite": "vite build",
        "dev:electron": "rollup -c --environment BUILD:development",
        "build": "npm run build:vite && npm run build:electron",
        "build:vite": "vite build",
        "build:electron": "rollup -c --environment BUILD:production",
        "pack": "npm run build && npm run pack:mac && npm run pack:win",
        "pack:mac": "electron-builder --mac --x64",
        "pack:win": "electron-builder --win --x64",
        "electron": "electron ./dist/main.js",
        "lint": "eslint --ext .ts,tsx alert/** electron/** renderer/** version/**",
        "lint:fix": "eslint --fix --ext .ts,tsx alert/** electron/** renderer/** version/**",
        "make:license": "ts-node ./cmd/license.ts",
        "make:jp-dict": "japanese-db sqlite -s ./sourceFolder -d ./dict",
        "postinstall": "patch-package"
    },
    "dependencies": {
        "@popperjs/core": "^2.11.2",
        "@twurple/api": "^5.0.13",
        "@twurple/auth": "^5.0.13",
        "@twurple/auth-electron": "^5.0.13",
        "axios": "^0.24.0",
        "bootstrap-icons": "^1.7.2",
        "classnames": "^2.3.1",
        "compare-versions": "^3.6.0",
        "dotenv": "^10.0.0",
        "fs-extra": "^10.0.0",
        "japanese-db": "^0.19.3",
        "moment": "^2.29.1",
        "nedb-promises": "^5.0.3",
        "node-fetch": "^2.6.7",
        "react": "^17.0.2",
        "react-copy-to-clipboard": "^5.0.4",
        "react-dom": "^17.0.2",
        "react-helmet": "^6.1.0",
        "react-input-range": "^1.3.0",
        "react-intl": "^5.24.3",
        "react-modal": "^3.14.4",
        "react-router-dom": "^5.3.0",
        "react-select": "^4.3.1",
        "react-textarea-autosize": "^8.3.3",
        "react-tooltip": "^4.2.21",
        "react-twitch-embed": "^2.1.0",
        "recoil": "^0.5.2",
        "shell-quote": "^1.7.3",
        "socket.io": "^4.4.1",
        "socket.io-client": "^4.4.1",
        "sqlite": "^4.0.23",
        "sqlite3": "^5.0.2",
        "tmi.js": "^1.8.5"
    },
    "devDependencies": {
        "@babel/core": "^7.16.7",
        "@babel/preset-env": "^7.16.8",
        "@rollup/plugin-replace": "^3.0.1",
        "@types/fs-extra": "^9.0.13",
        "@types/moment": "^2.13.0",
        "@types/node": "^16.11.19",
        "@types/node-fetch": "^2.5.12",
        "@types/react": "^17.0.38",
        "@types/react-dom": "^17.0.11",
        "@types/react-helmet": "^6.1.5",
        "@types/react-router-dom": "^5.3.2",
        "@types/react-select": "^4.0.18",
        "@types/recoil": "^0.0.1",
        "@types/shell-quote": "^1.7.1",
        "@types/tmi.js": "^1.8.1",
        "@typescript-eslint/eslint-plugin": "^4.33.0",
        "@typescript-eslint/parser": "^4.33.0",
        "@typescript-eslint/typescript-estree": "^4.33.0",
        "@vitejs/plugin-react-refresh": "^1.3.6",
        "autoprefixer": "^10.4.2",
        "electron": "^12.2.3",
        "electron-builder": "^22.14.13",
        "electron-is-dev": "^2.0.0",
        "electron-store": "^8.0.1",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^3.4.1",
        "eslint-plugin-react": "^7.28.0",
        "license-checker": "^25.0.1",
        "patch-package": "^6.4.7",
        "postcss": "^8.4.5",
        "prettier": "^2.5.1",
        "rollup": "^2.64.0",
        "rollup-plugin-esbuild": "^4.8.2",
        "rollup-plugin-replace": "^2.2.0",
        "sass": "^1.48.0",
        "stylelint-config-standard": "^22.0.0",
        "tailwindcss": "^2.2.19",
        "ts-node": "^10.4.0",
        "tsconfig-paths": "^3.12.0",
        "typescript": "^4.5.4",
        "vite": "^2.7.12"
    },
    "build": {
        "productName": "twitch-support-tool",
        "appId": "net.sus-happy.twitch-support-tool",
        "directories": {
            "output": "build"
        },
        "files": [
            "dist/**/*"
        ],
        "extraResources": [
            "dict"
        ],
        "dmg": {
            "contents": [
                {
                    "x": 410,
                    "y": 150,
                    "type": "link",
                    "path": "/Applications"
                },
                {
                    "x": 130,
                    "y": 150,
                    "type": "file"
                }
            ]
        },
        "mac": {
            "icon": "build/icons/icon.icns",
            "target": "dmg"
        },
        "win": {
            "icon": "build/icons/icon.ico",
            "target": "portable"
        },
        "linux": {
            "icon": "build/icons"
        }
    },
    "volta": {
        "node": "14.16.0",
        "npm": "7.6.1"
    }
}
